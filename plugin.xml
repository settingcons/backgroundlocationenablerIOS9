<?xml version="1.0" encoding="UTF-8"?><plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="settingconsultoria.plugins.backgroundlocationenabler"
    version="1.0.2">

    <name>BackgroundLocationEnabler</name>
    <description>A simple Phonegap Plugin to enable background location update on iOS.</description>
    <license>MIT</license>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>    
    
    <!-- ios -->
    <platform name="ios">
       
        <config-file target="*-Info.plist" parent="UIBackgroundModes">
            <array>
                <string>location</string><string>allowsBackgroundLocationUpdates=YES</string>
            </array>
        </config-file>

        
    </platform>

    
    
</plugin>
